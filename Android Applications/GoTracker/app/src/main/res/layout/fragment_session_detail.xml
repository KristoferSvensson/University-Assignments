<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.af6260.gotracker.SessionDetailFrag"
    android:orientation="vertical">

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="RtlHardcoded"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Activity : Running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvActivitySessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView
        android:text="Date : 2017-01-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView
        android:text="Start time : 00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStartTimeSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:text="Distance : 0,00m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDistanceSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:text="Time : 00:00:00.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:text="Steps taken : 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStepsSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:text="Average Speed: 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAverageSpeedSessionDetail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:text="Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sessionDelete"
        android:backgroundTint="@android:color/holo_red_dark"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />

</LinearLayout>
